

import static org.junit.Assert.*;
import org.junit.After;
import org.junit.Before;
import org.junit.Test;

/**
 * The test class WheelTest.
 *
 * @author  (your name)
 * @version (a version number or a date)
 */
public class WheelTest
{
    /**
     * Default constructor for test class WheelTest
     */
    public WheelTest()
    {
    }

    /**
     * Sets up the test fixture.
     *
     * Called before every test case method.
     */
    @Before
    public void setUp()
    {
    }

    /**
     * Tears down the test fixture.
     *
     * Called after every test case method.
     */
    @After
    public void tearDown()
    {
    }
    
    @Test
    public void testWheel() throws Exception
    {
        //testing with constructor
        Wheel wheel1 = new Wheel(20.50, 20.50);
        assertEquals(20.5, wheel1.getSize(), 0.1);
        assertEquals(20.5, wheel1.getPressure(), 0.1);
        
        
        //testing with setPressure()
        wheel1.setPressure(20);
        assertEquals(20.0, wheel1.getPressure(), 0.1);
        wheel1.setPressure(0);
        assertEquals(0.0, wheel1.getPressure(), 0.1);
        
        
    }
    
    @Test
    public void testToString() throws Exception
    {
        Wheel a = new Wheel(20.3, 19.7);
        assertEquals ("Size: 20,30 bars - Pressure: 19,70 bars - Ratio: 0,97 - Op: true", a.toString());
        
    }
    
    
    @Test
    public void testIsOperational() throws Exception
    {
        //True testing with constructor
        Wheel a = new Wheel(20.7, 19.3);        
        assertEquals ("Size: 20,70 bars - Pressure: 19,30 bars - Ratio: 0,93 - Op: true", a.toString());
        
        //False testing with setPressure()
        a.setPressure (2.3);
        assertEquals ("Size: 20,70 bars - Pressure: 2,30 bars - Ratio: 0,11 - Op: false", a.toString());
        
    }

    
}

